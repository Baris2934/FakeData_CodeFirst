@using FakeData_CodeFirst.ViewModels
@model HomePageVM
@{
    ViewBag.Title = "homepage";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h2>homepage</h2>
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
          
            <ul class="list-group">
                <li class="list-group-item active">
                    Kişiler
                </li>
                @foreach (var kisi in Model.Kisiler)
                {
                    <li class="list-group-item">
                        @(kisi.Ad + " " + kisi.Soyad) (<i>@kisi.Yas</i>)
                    </li>
                }

            </ul>
        </div>
        <div class="col-md-6">
            
            <ul class="list-group">
                <li class="list-group-item active">
                    Adresler
                </li>
                @foreach (var adres in Model.Adresler)
                {
                    <li class="list-group-item">
                        @adres.AdresTanim (<i>@(adres.Kisi.Ad + " " + adres.Kisi.Soyad)</i>)
                    </li>
                }

            </ul>
        </div>
    </div>
</div>






